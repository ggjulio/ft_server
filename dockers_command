steps :

apt get update, upgrade
apt install nginx
apt install default-mysql-server
sudo apt install php7.3-fpm php7.3-mysql 

systemctl start nginx php7.3-fpm
# systemctl enable nginx php7.3-fpm # no usefull ->entrypoint

mysql -u root -p

CREATE DATABASE WordPress CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci;
GRANT ALL ON WordPress.* TO WordPressUser @'localhost' IDENTIFIED BY 'your password';
FLUSH PRIVILEGES;
EXIT;

#install wordpress

mkdir -p /var/www/html/demo-wp.com				#create Dir to dl wordpress archive

cd /tmp
wget https://wordpress.org/latest.tar.gz
tar xf latest.tar.gz
sudo mv /tmp/wordpress/* /var/www/html/demo-wp.com/ 
sudo chown -R www-data: /var/www/html/demo-wp.com		#allow webserver complete access


#install phpmyadmin
  #wget https://files.phpmyadmin.net/phpMyAdmin/4.9.2/phpMyAdmin-4.9.2-english.tar.gz

mkdir -p /etc/nginx/phpmyadmin
wget -c https://files.phpmyadmin.net/phpMyAdmin/4.9.2/phpMyAdmin-4.9.2-english.tar.gz -O - | tar -xz -C /etc/nginx/phpmyadmin


#configure nginx for wordpress

cp wp_server_block /etc/nginx.sites-available/demo_wp.com
sudo ln -s /etc/nginx/sites-available/demo_wp.com /etc/nginx/sites-enabled/


uninstall apache2 :

sudo service apache2 stop
sudo apt-get purge apache2 apache2-utils apache2.2-bin apache2-common
sudo apt-get autoremove
whereis apache2
sudo rm -rf /etc/apache2


